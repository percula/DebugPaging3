<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- TextAppearances-->
    <style name="TextAppearance.Empty.Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Empty.Body" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Section.Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Feed.Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Feed.Header.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextAppearance.Text.Dialog" />

    <style name="TextAppearance.Text.Dialog.Title">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TextAppearance.Text.Dialog.Text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Text.Colored">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Text.Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Text.Secondary.Bold">
    </style>

    <style name="TextAppearance.Text.Secondary.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextAppearance.Text.Secondary.Small.Italicized">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Text.Tertiary">
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="TextAppearance.Text.Tertiary.Bold">
    </style>

    <style name="TextAppearance.Text.Tertiary.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextAppearance.Text.Tertiary.Small.Bold">
    </style>

    <style name="TextAppearance.Text.Tertiary.Small.Italicized">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Text.Count">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Text.Count.Number">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TextAppearance.Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Text.ToolbarHeader" >
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.Text.ToolbarHeader.Collapsed" >
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Text.CardTitle" >
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Chip.SavedSearch" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MapPreview.Chip" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>